<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Activity Icon -->
    <ImageView
        android:id="@+id/ivActivityIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        android:padding="8dp"
        android:src="@drawable/ic_tasks"
        app:tint="@color/md_theme_light_onPrimaryContainer" />

    <!-- Activity Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Completed"
            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
            android:textColor="@color/md_theme_light_onSurface"
            android:textStyle="bold"
            tools:text="Task Completed" />

        <TextView
            android:id="@+id/tvActivityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Equipment Inspection for Building A"
            android:textAppearance="@style/TextAppearance.SafeCom.Body2"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            tools:text="Equipment Inspection for Building A" />

    </LinearLayout>

    <!-- Activity Time -->
    <TextView
        android:id="@+id/tvActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="2h ago"
        android:textAppearance="@style/TextAppearance.SafeCom.Caption"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        tools:text="2h ago" />

</LinearLayout>
