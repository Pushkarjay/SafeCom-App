<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SafeCom" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- Material 3 dynamic colors -->
        <item name="android:enableOnBackInvokedCallback">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.SafeCom.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SafeCom</item>
    </style>

    <!-- NoActionBar Theme for specific activities -->
    <style name="Theme.SafeCom.NoActionBar" parent="Theme.SafeCom">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="ThemeOverlay.SafeCom.Toolbar" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Bottom Navigation Theme -->
    <style name="Widget.SafeCom.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SafeCom.BottomNavigation</item>
    </style>

    <style name="ThemeOverlay.SafeCom.BottomNavigation" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.SafeCom.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.SafeCom.CardView.Task" parent="Widget.SafeCom.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.SafeCom.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.SafeCom.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.SafeCom.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.SafeCom.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
    </style>

    <!-- Text Input Layout Styles -->
    <style name="Widget.SafeCom.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.SafeCom.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.SafeCom.Chip.Priority.High" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/priority_high</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SafeCom.Chip.Priority.Medium" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/priority_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SafeCom.Chip.Priority.Low" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/priority_low</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SafeCom.Chip.Status.Pending" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/status_pending</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.SafeCom.Chip.Status.InProgress" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/status_in_progress</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SafeCom.Chip.Status.Completed" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/status_completed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SafeCom.Chip.Status.Overdue" parent="Widget.SafeCom.Chip">
        <item name="chipBackgroundColor">@color/status_overdue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.SafeCom.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SafeCom.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SafeCom.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="TextAppearance.SafeCom.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="TextAppearance.SafeCom.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.SafeCom.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/md_theme_light_primary</item>
        <item name="trackColor">@color/md_theme_light_surfaceVariant</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="Widget.SafeCom.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/md_theme_light_primary</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_primary</item>
        <item name="tabTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!-- RecyclerView Style -->
    <style name="Widget.SafeCom.RecyclerView" parent="">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@color/md_theme_light_outline</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <!-- Divider Style -->
    <style name="Widget.SafeCom.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_theme_light_outlineVariant</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.SafeCom.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/md_theme_light_surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SafeCom.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.SafeCom.BottomSheet" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Dialog Style -->
    <style name="ThemeOverlay.SafeCom.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.SafeCom.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/md_theme_light_primary</item>
        <item name="trackTint">@color/md_theme_light_surfaceVariant</item>
    </style>

    <!-- Checkbox Style -->
    <style name="Widget.SafeCom.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/md_theme_light_primary</item>
    </style>

    <!-- Radio Button Style -->
    <style name="Widget.SafeCom.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/md_theme_light_primary</item>
    </style>
</resources>
