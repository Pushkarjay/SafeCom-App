<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@color/md_theme_light_primaryContainer"
            android:contentDescription="Profile Avatar"
            android:padding="8dp"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:tint="@color/md_theme_light_onPrimaryContainer" />

        <!-- Unread Indicator -->
        <View
            android:id="@+id/viewUnreadIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/md_theme_light_primary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar"
            tools:visibility="visible" />

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="John Doe"
            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
            android:textColor="@color/md_theme_light_onSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvTime"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar"
            tools:text="John Doe" />

        <!-- Message Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30 PM"
            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvContactName"
            tools:text="2:30 PM" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Hey, can you help me with the equipment inspection report? I need to submit it by..."
            android:textAppearance="@style/TextAppearance.SafeCom.Body2"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@+id/layoutMessageStatus"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvContactName"
            tools:text="Hey, can you help me with the equipment inspection report? I need to submit it by..." />

        <!-- Message Status and Unread Count -->
        <LinearLayout
            android:id="@+id/layoutMessageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTime">

            <!-- Online Status Indicator -->
            <View
                android:id="@+id/viewOnlineStatus"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/success"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Unread Count Badge -->
            <TextView
                android:id="@+id/tvUnreadCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/md_theme_light_primary"
                android:gravity="center"
                android:text="3"
                android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="3"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Message Type Indicator -->
        <ImageView
            android:id="@+id/ivMessageType"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_image"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tvLastMessage"
            app:layout_constraintStart_toStartOf="@+id/tvLastMessage"
            app:tint="@color/md_theme_light_onSurfaceVariant"
            tools:visibility="visible" />

        <!-- Typing Indicator -->
        <LinearLayout
            android:id="@+id/layoutTypingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvLastMessage"
            tools:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/typing"
                android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                android:textColor="@color/md_theme_light_primary"
                android:textStyle="italic" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:indeterminate="true"
                app:indicatorColor="@color/md_theme_light_primary"
                app:indicatorSize="12dp"
                app:trackThickness="1dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
