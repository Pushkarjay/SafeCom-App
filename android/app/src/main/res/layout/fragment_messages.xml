<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.messages.MessagesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/search_messages"
            app:endIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:startIconDrawable="@drawable/ic_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            style="@style/Widget.SafeCom.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conversations" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_chat" />

        </com.google.android.material.tabs.TabLayout>

        <!-- Messages List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            style="@style/Widget.SafeCom.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            tools:itemCount="10"
            tools:listitem="@layout/item_conversation" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:visibility="gone"
            tools:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:alpha="0.6"
                android:src="@drawable/ic_empty_messages"
                app:tint="@color/md_theme_light_onSurfaceVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/empty_messages"
                android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                android:textColor="@color/md_theme_light_onSurfaceVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="No conversations yet.\nStart a conversation with your team members."
                android:textAppearance="@style/TextAppearance.SafeCom.Body2"
                android:textColor="@color/md_theme_light_onSurfaceVariant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartConversation"
                style="@style/Widget.SafeCom.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_message"
                app:icon="@drawable/ic_message"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

    <!-- New Message FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewMessage"
        style="@style/Widget.SafeCom.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="@string/new_message"
        app:srcCompat="@drawable/ic_edit"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
