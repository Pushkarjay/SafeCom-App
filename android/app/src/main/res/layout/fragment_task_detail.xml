<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.tasks.TaskDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Task Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Task Title -->
                <TextView
                    android:id="@+id/tvTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Equipment Inspection for Building A"
                    android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                    android:textColor="@color/md_theme_light_onSurface"
                    tools:text="Equipment Inspection for Building A" />

                <!-- Task Description -->
                <TextView
                    android:id="@+id/tvTaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Perform routine inspection of all equipment in Building A including HVAC systems, electrical panels, and safety equipment. Check for any maintenance requirements and document findings."
                    android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                    android:textColor="@color/md_theme_light_onSurface"
                    tools:text="Perform routine inspection of all equipment in Building A including HVAC systems, electrical panels, and safety equipment." />

                <!-- Status and Priority Chips -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        style="@style/Widget.SafeCom.Chip.Status.InProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/status_in_progress" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriority"
                        style="@style/Widget.SafeCom.Chip.Priority.High"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_high" />

                </LinearLayout>

                <!-- Task Progress -->
                <LinearLayout
                    android:id="@+id/layoutProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Progress:"
                        android:textAppearance="@style/TextAppearance.SafeCom.Body2"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textAppearance="@style/TextAppearance.SafeCom.Body2"
                        android:textColor="@color/md_theme_light_primary"
                        android:textStyle="bold"
                        tools:text="65%" />

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="65"
                    android:visibility="gone"
                    app:indicatorColor="@color/md_theme_light_primary"
                    app:trackColor="@color/md_theme_light_surfaceVariant"
                    tools:progress="65"
                    tools:visibility="visible" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Task Details -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Task Details"
                    android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                    android:textColor="@color/md_theme_light_onSurface" />

                <!-- Assigned To -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_assigned_to"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvAssignedTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="John Doe"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="John Doe" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Assigned By -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_assigned_by"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvAssignedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Jane Smith"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="Jane Smith" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Due Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_due_date"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="August 15, 2025"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="August 15, 2025" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Created Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_created_at"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvCreatedAt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="August 13, 2025"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="August 13, 2025" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateStatus"
                style="@style/Widget.SafeCom.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/update_status"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleteTask"
                style="@style/Widget.SafeCom.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/complete_task"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Attachments -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAttachments"
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/task_attachments"
                        android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddAttachment"
                        style="@style/Widget.SafeCom.Button.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attach_file"
                        app:icon="@drawable/ic_attachment"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAttachments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_attachment" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Comments Section -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/task_comments"
                    android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                    android:textColor="@color/md_theme_light_onSurface" />

                <!-- Add Comment Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilComment"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/add_comment"
                    app:endIconDrawable="@drawable/ic_send"
                    app:endIconMode="custom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Comments List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_comment" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
