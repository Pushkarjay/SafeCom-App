<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/md_theme_light_primaryContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Profile Picture -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/md_theme_light_primary"
                    android:contentDescription="Profile Picture"
                    android:padding="16dp"
                    android:src="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:tint="@color/white" />

                <!-- Edit Profile Picture Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabEditPhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Edit Photo"
                    app:backgroundTint="@color/md_theme_light_primary"
                    app:fabCustomSize="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfilePicture"
                    app:layout_constraintEnd_toEndOf="@+id/ivProfilePicture"
                    app:maxImageSize="16dp"
                    app:srcCompat="@drawable/ic_camera"
                    app:tint="@color/white" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivProfilePicture"
                    app:layout_constraintTop_toTopOf="@+id/ivProfilePicture"
                    tools:text="John Doe" />

                <!-- Employee ID -->
                <TextView
                    android:id="@+id/tvEmployeeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="EMP001"
                    android:textAppearance="@style/TextAppearance.SafeCom.Body2"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivProfilePicture"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                    tools:text="EMP001" />

                <!-- Department and Position -->
                <TextView
                    android:id="@+id/tvDepartmentPosition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Engineering Department • Senior Engineer"
                    android:textAppearance="@style/TextAppearance.SafeCom.Body2"
                    android:textColor="@color/md_theme_light_onPrimaryContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivProfilePicture"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmployeeId"
                    tools:text="Engineering Department • Senior Engineer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Tasks Completed -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.SafeCom.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCompletedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="142"
                        android:textAppearance="@style/TextAppearance.SafeCom.Headline1"
                        android:textColor="@color/status_completed"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="142" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Completed"
                        android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Current Tasks -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.SafeCom.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCurrentTasksCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textAppearance="@style/TextAppearance.SafeCom.Headline1"
                        android:textColor="@color/status_in_progress"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Current"
                        android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Productivity Score -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.SafeCom.CardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvProductivityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textAppearance="@style/TextAppearance.SafeCom.Headline1"
                        android:textColor="@color/md_theme_light_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="95%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Productivity"
                        android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Profile Information -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/personal_information"
                        android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        style="@style/Widget.SafeCom.Button.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="textStart" />

                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="john.doe@safecom.com"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="john.doe@safecom.com" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="+1 (555) 123-4567"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="+1 (555) 123-4567" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Join Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/join_date"
                            android:textAppearance="@style/TextAppearance.SafeCom.Caption"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvJoinDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="January 15, 2022"
                            android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                            android:textColor="@color/md_theme_light_onSurface"
                            tools:text="January 15, 2022" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Account Actions -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SafeCom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Account"
                    android:textAppearance="@style/TextAppearance.SafeCom.Headline2"
                    android:textColor="@color/md_theme_light_onSurface" />

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/layoutChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_lock"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/change_password"
                        android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                </LinearLayout>

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/layoutSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/settings"
                        android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/md_theme_light_onSurfaceVariant" />

                </LinearLayout>

                <!-- Logout -->
                <LinearLayout
                    android:id="@+id/layoutLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/md_theme_light_error" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/logout"
                        android:textAppearance="@style/TextAppearance.SafeCom.Body1"
                        android:textColor="@color/md_theme_light_error" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/md_theme_light_error" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Footer Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
